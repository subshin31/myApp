%p#notice= notice
%h1 Books
%table.table.table-border.table-striped.table-hover.sortable
  %thead
    %tr
      %th Id
      %th Title
      %th Author
      %th Publication year
      %th{:colspan => "3"}
  %tbody
    - @books.each do |book,sortable_id|
      %tr{id: sortable_id}
        %td= book.id
        %td= book.title
        %td= book.author
        %td= book.publication_year
        %td= link_to 'Show', book
        %td= link_to 'Edit', edit_book_path(book)
        %td= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }
%br/

= link_to 'New Book', new_book_path


  